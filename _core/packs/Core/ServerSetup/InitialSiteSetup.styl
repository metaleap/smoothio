div.smio-setup
	position: absolute
	top: 12%
	left: 20%
	right: 20%
	smio-box-shadow 0em 0.4em 4.8em #909090
	line-height 1.25
	overflow hidden

.smio-setup-outer
	padding 1em

.smio-setup-outer-top
	smio-background-gradient rgba(255, 255, 255, 0.66) rgba(255, 255, 255, 0.88)

.smio-setup-inner
	background rgba(255, 255, 255, 0.95)
	smio-box-shadow 0 0.062em 0.35em #c0c0c0 inset

.smio-setup-header
	font-size 2em
	color #aa4400

.smio-setup-header-desc
	color #808080
	font-size 1.25em

.smio-setup-stepbox
	padding 1em

.smio-setup-steps
	smio-background-gradient rgba(255, 255, 255, 0.95) rgba(255, 255, 255, 0.65)
	text-align center
	white-space nowrap

.smio-setup-step
	font-size 0.95em
	padding 0.2em 1em 0.2em 1em
	display inline-block
	color #707070
	text-shadow 0px 0.098em #ffffff

.smio-setup-step-inactive:hover
	text-decoration underline

.smio-setup-step-active
	cursor default
	smio-border-radius 1em
	smio-box-shadow 0 0.066em 0.3em #606060 inset
	background rgba(0, 0, 0, 0.1)
	color #505050

