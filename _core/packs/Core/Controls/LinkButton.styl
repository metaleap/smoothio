.smio-bigbutton2
	display inline-block
	padding 0.33em 1em
	font-size 1.2em
	font-weight bold
	background rgba(0, 0, 0, 0.05)
	color #707070
	text-shadow 0 1px #fff
	border 1px solid rgba(0, 0, 0, 0.25)
	smio-border-radius 0.25em
	smio-box-shadow 0 4px 4px rgba(255, 255, 255, 0.6) inset, 0px -9px 10px -4px rgba(255, 255, 255, 0.9) inset, 0 -20px 1px -6px rgba(0, 0, 0, 0.125) inset

.smio-bigbutton
	display inline-block
	padding 0.3em 1em
	font-size 1.15em
	font-weight bold
	color #505050
	text-shadow 0 1px #f0f0f0
	border $hairline outset rgba(255, 255, 255, 0.5)
	smio-narrow()
	smio-border-radius 0.25em 0.25em 0.25em 0.25em
	smio-box-shadow 0 1px 5px rgba(0, 0, 0, 0.5), inset 0 1px rgba(255, 255, 255, 0.3), inset 0 10px rgba(255, 255, 255, 0.2), inset 0 10px 20px rgba(255, 255, 255, 0.25), inset 0 -15px 30px rgba(0, 0, 0, 0.15)

.smio-bigbutton.smio-invwarn
	background-color rgba(255, 160, 0, 0.25)

.smio-bigbutton.smio-enabled:hover, .smio-bigbutton.smio-enabled:focus
	background-color $colhilita
	smio-box-shadow 0 1px 5px rgba(0, 0, 0, 0.5), inset 0 1px rgba(255, 255, 255, 0.3), inset 0 10px rgba(255, 255, 255, 0.2), inset 0 10px 20px rgba(255, 255, 255, 0.25), inset 0 -15px 30px rgba(0, 0, 0, 0.35)

.smio-bigbutton.smio-enabled:active
	background-color $colhilita
	smio-box-shadow 0 0 7px rgba(0, 0, 0, 0.5), inset 0 15px 30px rgba(0, 0, 0, 0.25), inset 0 -10px 20px rgba(255, 255, 255, 0.1), inset 0 -10px rgba(255, 255, 255, 0.05), inset 0 -1px rgba(255, 255, 255, 0.15)

