$col = #fe9
$siz = 1.5em

.smio-invwarn
	opacity 0
	display inline-block
	z-index 2147483640
	position absolute
	left 50%
	top 50%
	width auto
	height auto
	min-width 20em
	white-space normal
	margin-left -20px
	line-height 0
	smio-transition all 0.5s

.smio-invwarn-intro
	color #606060
	font-size 0.9em

.smio-invwarn-btns
	visibility visible
	padding 0.66em
	overflow hidden
	font-size 0.9em

.smio-invwarn:hover .smio-invwarn-btns
	visibility visible

.smio-invwarn-btns.smio-bigbutton-strip
	text-align right

.smio-invwarn-btns a.smio-bigbutton
	font-weight normal
	letter-spacing 0
	position relative
	padding-left 1.8em

.smio-invwarn-btns a.smio-bigbutton span.smio-invbtn-icon
	font-size 1.3em
	opacity 0.6
	display inline-block
	position absolute
	left 0.3em
	top 0.266em

.smio-invwarn-btns a.smio-bigbutton span.smio-invbtn-cancel
	color #800

.smio-invwarn-btns a.smio-bigbutton span.smio-invbtn-retry
	color #070

.smio-invwarn-msg
	padding-top 0.33em
	xfont-weight bold

.smio-invwarn-msg-noquote:before, .smio-invwarn-msg-noquote:after, .smio-invwarn-msg-quote:before, .smio-invwarn-msg-quote:after
	color #A0A0A0

.smio-invwarn-msg-quote:before
	content '❝'

.smio-invwarn-msg-quote:after
	content: '❞'

a.smio-invwarn-close
	width 0.9em
	height 0.9em
	text-align center
	line-height 0.8
	margin-right 0.33em
	margin-top 0.33em
	padding-top 0.1em
	padding-right 0.1em
	float right
	display inline-block
	visibility hidden
	border 1px outset transparent
	smio-border-radius 0.2em
	smio-nowrapflow()

.smio-invwarn:hover a.smio-invwarn-close
	visibility visible

a.smio-invwarn-close:active
	background-color $col
	border 1px inset #c0c0c0

a.smio-invwarn-close:hover, a.smio-invwarn-close:focus
	background-color $col
	border 1px outset #c0c0c0

.smio-invwarn-edge
	display inline-block
	margin-left 1em
	height 1em
	padding 0 1em 0 1em
	text-align center
	smio-nowrapflow()

.smio-invwarn-arr
	background-color $col
	display inline-block
	max-width $siz
	max-height $siz
	smio-posrel-twh(0.5em, $siz)
	smio-transform rotate(45deg)
	smio-nowrapflow()
	smio-box-shadow 0em 0.1em 0.75em #a0a0a0

.smio-invwarn-box
	smio-background-vgradient rgba($col, 1) rgba($col, 0.8)
	smio-box-shadow 0em 0.1em 0.75em #a0a0a0
	smio-border-radius 0.5em

.smio-invwarn-inner
	line-height 1.25
	font-size 0.8em
	padding 1.5em 0 0.25em 2em
	overflow hidden

