$col = #fe9
$siz = 1.5em

.smio-invwarndetails
	opacity 1
	display inline-block
	z-index 2147483640
	position absolute
	width auto
	height auto
	white-space normal
	margin-left -20px
	line-height 0
	smio-transition all 0.5s

a.smio-invwarndetails-close
	width 0.9em
	height 0.9em
	text-align center
	line-height 0.8
	margin-right 0.33em
	margin-top 0.33em
	padding-top 0.1em
	padding-right 0.1em
	float right
	display inline-block
	opacity 0
	border 1px outset transparent
	smio-border-radius 0.2em
	smio-nowrapflow()

.smio-invwarndetails:hover a.smio-invwarndetails-close
	opacity 1

a.smio-invwarndetails-close:active
	opacity 1
	background-color $col
	border 1px inset #c0c0c0

a.smio-invwarndetails-close:hover, a.smio-invwarndetails-close:focus
	opacity 1
	background-color $col
	border 1px outset #c0c0c0

.smio-invwarndetails-edge
	display inline-block
	margin-left 1em
	height 1em
	padding 0 1em 0 1em
	text-align center
	smio-nowrapflow()

.smio-invwarndetails-arr
	background-color $col
	display inline-block
	max-width $siz
	max-height $siz
	smio-posrel-twh(0.5em, $siz)
	smio-transform rotate(45deg)
	smio-nowrapflow()
	smio-box-shadow 0em 0.1em 0.75em #a0a0a0

.smio-invwarndetails-box
	smio-background-vgradient rgba($col, 1) rgba($col, 0.75)
	smio-box-shadow 0em 0.1em 0.75em #a0a0a0
	smio-border-radius 0.5em

.smio-invwarndetails-inner
	line-height 1.25
	font-size 0.8em
	padding 0.66em 0.66em 2em 0.66em

