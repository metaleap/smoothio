input.smio-textinput
	cursor text
	background transparent
	border 0px none red
	border-bottom 0.094em dotted #c0c0c0
	smio-select text !important
	smio-drag auto
	padding 0.33em
	font-weight bold

input.smio-textinput:focus
	font-weight normal
	smio-border-radius 0.2em
	background #ffffff
	smio-box-shadow 0 0.066em 0.3em #606060 inset
	border-bottom 0px none red

