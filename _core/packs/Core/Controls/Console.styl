
.smio-console
	text-align center
	overflow hidden

.smio-console-top
	background rgba(255, 255, 255, 0.6)
	smio-box-shadow(0 0 12px #000000)
	position fixed
	width 100%
	top 0

.smio-console-ever
	height: 32px

.smio-console-main
	background rgba(128, 128, 128, 0.4)
	position absolute
	top 32px
	left 0
	right 0
	bottom 32px

.smio-console-bottom
	background rgba(0, 0, 0, 0.7)
	color #ffffff
	position fixed
	width 100%
	bottom 0
	border-top: 1px solid #303030
	smio-box-shadow(0 0 16px #303030)

