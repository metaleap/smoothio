$borad = 0.4em

.smio-bigbutton-strip
	text-align center

.smio-bigbutton-strip .smio-bigbutton
	smio-border-radius 0
	smio-box-shadow inset 0 1px rgba(255, 255, 255, 0.3), inset 0 10px rgba(255, 255, 255, 0.2), inset 0 10px 20px rgba(255, 255, 255, 0.25), inset 0 -15px 30px rgba(0, 0, 0, 0.15)

.smio-bigbutton-strip .smio-bigbutton:first-child
	smio-border-radius $borad 0 0 $borad

.smio-bigbutton-strip .smio-bigbutton:last-child
	smio-border-radius 0 $borad $borad 0

