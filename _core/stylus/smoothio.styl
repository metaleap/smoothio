@import '_mixin'
@import '_reset'

::selection
	smio-selection()

::-webkit-selection
	smio-selection()

:-moz-selection
	smio-selection()

::-moz-selection
	smio-selection()

@font-face
	font-family 'Pictos'
	src url('/_/file/images/peot')
	src local('â˜º'), url('/_/file/images/pwoff') format('woff'), url('/_/file/images/pweb.ttf') format('truetype'), url('/_/file/images/psvg#webfontphKv1xv9') format('svg')
	font-weight normal
	font-style normal

@keyframes animspin
	0%
		smio-transform rotate(0deg)
	50%
		smio-transform rotate(180deg)
	100%
		smio-transform rotate(359deg)

@keyframes animblink
	0%
		opacity 0
	100%
		opacity 1

.smio-picon
	font-family Pictos !important
	line-height 0
	font-weight 100

.smio-blink
	smio-animation animblink 0.33s linear infinite alternate

.smio-spin
	display inline-block
	color #204A60
	font-weight bold
	smio-animation animspin 2s linear infinite

a
	text-decoration none
	color inherit

img, span, div
	image-rendering optimizeQuality
	-ms-interpolation-mode bicubic

body
	cursor default
	color $coldark
	margin 0
	font-family Arial, Helvetica, Helvetica Neue, Sans-Serif
	smio-select none
	smio-drag none
	xbackground-color #d0c8b8
	background-color #000000
	background-position left top
	overflow-x hidden

.smio-disabledfaded
	opacity 0.5

@css {
.smio-disabledfaded, .smio-disabledfaded label, .smio-disabledfaded input, .smio-disabledfaded a {
	cursor: not-allowed;
}
}

.smio-offline, .smio-invoking, .smio-invoking label, .smio-invoking a, .smio-invoking input
	cursor wait !important

.smio-offline
	display none
	text-align center
	color $collite
	text-shadow 0 0 0.6em $collite
	padding 0.3em 0 0.4em 0
	font-size: 1.3em
	position relative
	z-index 2147483640
	width 8em
	margin-left auto
	margin-right auto
	border 1px solid rgba($colhidark, 0.4)
	border-top 0px none red
	smio-narrow()
	smio-background-ogradient rgba($colhidark, 0.6), 1px, rgba($colhidark, 0.7), 3px, 18px
	smio-border-radius 0 0 0.66em 0.66em

