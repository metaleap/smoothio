@import '_mixin'
@import '_reset'

smio-selection()
	background-color rgba(0, 0, 0, 0.75) !important
	color $collite !important
	text-shadow none !important

::selection
	smio-selection()

::-webkit-selection
	smio-selection()

:-moz-selection
	smio-selection()

::-moz-selection
	smio-selection()

@css {
.smio-disabledfaded, .smio-disabledfaded label, .smio-disabledfaded input, .smio-disabledfaded a {
	cursor: not-allowed;
}
}

.smio-invoking, .smio-invoking label, .smio-invoking a, .smio-invoking input
	cursor wait !important

a
	text-decoration none
	color inherit

img, span, div
	image-rendering optimizeQuality
	-ms-interpolation-mode bicubic

body
	cursor default
	color $coldark
	margin 0
	font-family Arial, Helvetica, Helvetica Neue, Sans-Serif
	smio-select none
	smio-drag none
	background-color #d0c8b8
	background-size cover

.smio-disabledfaded
	opacity 0.5

.smio-blocking-overlay
	display none
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 2147483640
	text-align center
	padding 18% 8% 8% 8%
	line-height 1.3em
	font-size: 1.7em
	color $collite
	text-shadow 0 0 0.6em #000000
	smio-narrow()
	smio-background-ogradient rgba(0, 0, 0, 0.5), 25%, rgba(0, 0, 0, 0.7), 75%, 0.3em

@keyframes animspin
	0%
		smio-transform rotate(0deg)
	50%
		smio-transform rotate(180deg)
	100%
		smio-transform rotate(359deg)

@keyframes animblink
	0%
		opacity 0
	100%
		opacity 1

.smio-blink
	-webkit-animation-name animblink
	-webkit-animation-duration 0.33s
	-webkit-animation-direction alternate
	-webkit-animation-iteration-count infinite
	-webkit-animation-timing-function linear

.smio-spin
	display inline-block
	color #204A60
	font-weight bold
	-webkit-animation-name animspin
	-webkit-animation-duration 2s
	-webkit-animation-iteration-count infinite
	-webkit-animation-timing-function linear

