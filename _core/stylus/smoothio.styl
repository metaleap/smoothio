@import 'include/mixin'
@import 'include/reset'

smio-selection()
	background-color rgba(0, 0, 0, 0.75) !important
	color $collite !important
	text-shadow none !important

::selection
	smio-selection()

::-webkit-selection
	smio-selection()

:-moz-selection
	smio-selection()

::-moz-selection
	smio-selection()

a
	text-decoration none
	color inherit

img
	image-rendering optimizeQuality
	-ms-interpolation-mode bicubic

body
	cursor default
	color $coldark
	margin 0
	font-family Arial, Helvetica, Helvetica Neue, Sans-Serif
	smio-select none
	smio-drag none
	smio-background-bgradient $smcol

.smio-disabledfaded
	opacity 0.65

.smio-blocking-overlay
	display none
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 2147483640
	text-align center
	padding 18% 8% 8% 8%
	line-height 1.3em
	font-size: 1.7em
	color $collite
	text-shadow 0 0 0.6em #000000
	smio-narrow()
	smio-background-ogradient rgba(0, 0, 0, 0.5), 25%, rgba(0, 0, 0, 0.7), 75%, 0.3em

@keyframes offblink
	0%
		opacity 0
	100%
		opacity 1

#smio_offline_blink
	-webkit-animation-name offblink
	-webkit-animation-duration 0.33s
	-webkit-animation-iteration-count infinite
	-webkit-animation-direction alternate
	-webkit-animation-timing-function linear
	text-decoration blink

