@import '_mixin'
@import '_reset'

smio-selection()
	background-color rgba(0, 0, 0, 0.75) !important
	color $collite !important
	text-shadow none !important

::selection
	smio-selection()

::-webkit-selection
	smio-selection()

:-moz-selection
	smio-selection()

::-moz-selection
	smio-selection()

.smio-bigbutton2
	display inline-block
	padding 0.33em 1em
	font-size 1.2em
	font-weight bold
	background rgba(0, 0, 0, 0.05)
	color #707070
	text-shadow 0 1px #fff
	border 1px solid rgba(0, 0, 0, 0.25)
	smio-border-radius 0.25em
	smio-box-shadow 0 4px 4px rgba(255, 255, 255, 0.6) inset, 0px -9px 10px -4px rgba(255, 255, 255, 0.9) inset, 0 -20px 1px -6px rgba(0, 0, 0, 0.125) inset

.smio-bigbutton
	display inline-block
	padding 0.4em 1em
	font-size 1.15em
	font-weight bold
	color #707070
	text-shadow 0 1px #f0f0f0
	border $hairline outset rgba(255, 255, 255, 0.5)
	smio-narrow()
	smio-border-radius 0.25em 0.25em 0.25em 0.25em
	smio-box-shadow 0 1px 5px rgba(0, 0, 0, 0.5), inset 0 1px rgba(255, 255, 255, 0.3), inset 0 10px rgba(255, 255, 255, 0.2), inset 0 10px 20px rgba(255, 255, 255, 0.25), inset 0 -15px 30px rgba(0, 0, 0, 0.15)

@css {
.smio-disabled, .smio-disabled * {
	cursor: not-allowed;
}
}

.smio-bigbutton.smio-enabled:hover, .smio-bigbutton.smio-enabled:focus
	background-color rgba(0, 0, 0, 0.01)
	color #606060
	smio-box-shadow 0 1px 5px rgba(0, 0, 0, 0.5), inset 0 1px rgba(255, 255, 255, 0.3), inset 0 10px rgba(255, 255, 255, 0.2), inset 0 10px 20px rgba(255, 255, 255, 0.25), inset 0 -15px 30px rgba(0, 0, 0, 0.35)

.smio-bigbutton.smio-enabled:active
	color #505050
	background-color rgba(0, 0, 0, 0.01)
	smio-box-shadow 0 0 7px rgba(0, 0, 0, 0.5), inset 0 15px 30px rgba(0, 0, 0, 0.25), inset 0 -10px 20px rgba(255, 255, 255, 0.1), inset 0 -10px rgba(255, 255, 255, 0.05), inset 0 -1px rgba(255, 255, 255, 0.15)

a
	text-decoration none
	color inherit

img, span, div
	image-rendering optimizeQuality
	-ms-interpolation-mode bicubic

body
	cursor default
	color $coldark
	margin 0
	font-family Arial, Helvetica, Helvetica Neue, Sans-Serif
	smio-select none
	smio-drag none
	background-color $smcol

.smio-disabledfaded
	opacity 0.5

.smio-blocking-overlay
	display none
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 2147483640
	text-align center
	padding 18% 8% 8% 8%
	line-height 1.3em
	font-size: 1.7em
	color $collite
	text-shadow 0 0 0.6em #000000
	smio-narrow()
	smio-background-ogradient rgba(0, 0, 0, 0.5), 25%, rgba(0, 0, 0, 0.7), 75%, 0.3em

@keyframes offblink
	0%
		opacity 0
	100%
		opacity 1

#smio_offline_blink
	-webkit-animation-name offblink
	-webkit-animation-duration 0.33s
	-webkit-animation-iteration-count infinite
	-webkit-animation-direction alternate
	-webkit-animation-timing-function linear
	text-decoration blink

